<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:background="@drawable/sunrise">
    <ScrollView
            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Sound turn off"
                    android:textSize="48sp"
                    android:textColor="#3C1414"
                    android:id="@+id/textView2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_gravity="center"
                    android:textSize="48sp"
                    android:focusable="false"
                    android:longClickable="false"
                    android:textColor="#3C1414"
                    android:id="@+id/timeStart"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Sound turn on "
                    android:textSize="48sp"
                    android:textColor="#3C1414"
                    android:id="@+id/textView3"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="48sp"
                    android:ems="10"
                    android:focusable="false"
                    android:longClickable="false"
                    android:textColor="#3C1414"
                    android:id="@+id/timeEnd"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/changeSettings"
                    android:id="@+id/changeSettings"
                    android:textColor="#3C1414"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="italic"/>
            <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:gravity="center">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium" android:text="M"
                            android:id="@+id/textView" android:textColor="#000000"
                            android:gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Tu"
                              android:id="@+id/textView4" android:textColor="#000000" android:gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Wd"
                              android:id="@+id/textView5" android:textColor="#000000" android:gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Th"
                              android:id="@+id/textView6" android:textColor="#000000" android:gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Fr"
                              android:id="@+id/textView7" android:textColor="#000000" android:paddingLeft="5dp"
                              android:gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Sa"
                              android:id="@+id/textView8" android:textColor="#000000" android:gravity="center"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Su"
                              android:id="@+id/textView9" android:textColor="#000000" android:gravity="center"/>
                </TableRow>
                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:gravity="center">
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:id="@+id/setMonday" android:layout_gravity="right" android:checked="false"
                            android:shadowColor="#336600"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:id="@+id/setTuesday" android:layout_gravity="right" android:checked="false"
                            android:textColorHighlight="#336600" android:textColor="#336600"
                            android:shadowColor="#336600"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:id="@+id/setWednesday" android:layout_gravity="right" android:checked="false"
                            android:textColorHighlight="#336600" android:textColor="#336600"
                            android:shadowColor="#336600"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:id="@+id/setThursday" android:layout_gravity="right" android:checked="false"
                            android:shadowColor="#336600"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:id="@+id/setFriday" android:layout_gravity="right" android:checked="false"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:id="@+id/setSaturday" android:layout_gravity="right" android:checked="false"/>
                    <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:id="@+id/setSunday" android:layout_gravity="right" android:checked="false"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
